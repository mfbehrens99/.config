### This file defines all commands that can be binded later
#
# Logo key. Use Mod1 for Alt and Mod4 for Super.
set $mod Mod4
set $alt_mod Mod1

# Direction keys
set $left Left
set $down Down
set $up Up
set $right Right

# Alternative direction keys
set $left_alt h
set $down_alt j
set $up_alt k
set $right_alt l

# Add --to-code to bindsym, support for non-latin layouts
set $bindsym bindsym --to-code

# For user's convenience, the same for unbindsym
set $unbindsym unbindsym --to-code

# background
set $background /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png

# Your preferred terminal emulator
set $term foot

# Your preferred application launcher
set $menu rofi
set $menu_exec $menu -show combi | xargs swaymsg exec --

# clipboard history
set $clipboard cliphist list | $menu -dmenu -p "Select item to copy" -lines 10 -width 35 | cliphist decode | wl-copy
set $clipboard-del cliphist list | $menu -dmenu -p "Select item to delete" -lines 10 -width 35 | cliphist delete

set $screenshot grim -g "$(slurp)" -t png | wl-copy -t image/png

set $onscreen_bar xob |

set $volume_down $onscreen_bar pactl set-sink-volume @DEFAULT_SINK@ -2% & pactl set-sink-mute @DEFAULT_SINK@ off
set $volume_up $onscreen_bar pactl set-sink-volume @DEFAULT_SINK@ +2% & pactl set-sink-mute @DEFAULT_SINK@ off
set $volume_mute pactl set-sink-mute @DEFAULT_SINK@ on
set $volume_unmute pactl set-sink-mute @DEFAULT_SINK@ off
set $volume_mute_toggle $onscreen_bar $(pactl set-sink-mute @DEFAULT_SINK@ toggle && pactl get-sink-mute @DEFAULT_SINK@ | sed -En "/no/ s/.*/$($sink_volume)/p; /yes/ s/.*/0/p")
set $mic_mute $onscreen_bar $(pactl set-source-mute @DEFAULT_SOURCE@ toggle && pactl get-source-mute @DEFAULT_SOURCE@ | sed -En "/no/ s/.*/$($source_volume)/p; /yes/ s/.*/0/p")

set $media_play_pause playerctl play-pause
set $media_next playerctl next
set $media_previous playerctl previous

set $locking swaylock

set $wlsunset '[ -x "$(command -v wlsunset)" ] && $HOME/.config/waybar/scripts/sunset.sh "on"'
set $autotiling autotiling -w 1 3 5 7 9

set $calculator qalculate-qt